@using OrderManagerMvc.Models
@model IList<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="class= container mt-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background-color:darkviolet; background-image: linear-gradient(to right,darkviolet, #E0B0FF, darkviolet);">
    
    <style>

        .btn-coral:hover {
            box-shadow: 0 0 10px #F08080;
            transform: scale(1.05);
            background-color: #F08080;
            color: black;
        }

        .btn-red:hover {
            box-shadow: 0 0 10px #D2042D;
            transform: scale(1.05);
            background-color: #D2042D;
            color: black;
        }

        .btn-yellow:hover {
            box-shadow: 0 0 10px #FFEF00;
            transform: scale(1.05);
            background-color: #FFEF00;
            color: black;
        }

    </style>
    
    
    
    
    
    
    <h2 class="display-4  fw-bolder" style="color: #B0C4DE; text-shadow: 2px 2px 6px #000;">Products</h2>

    <p>
        <a asp-action="Create" class="btn btn-coral">➕ Add New Product</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>SKU</th>
                <th>Unit Price</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Sku</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-yellow">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-red">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
