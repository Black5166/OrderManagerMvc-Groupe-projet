@model OrderManagerMvc.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container mt-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded );">





    <h3>Delete Product</h3>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Sku</dt>
            <dd class="col-sm-10">@Model.Sku</dd>
            <dt class="col-sm-2">Unit Price</dt>
            <dd class="col-sm-10">@Model.UnitPrice.ToString("C")</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>

</div>

