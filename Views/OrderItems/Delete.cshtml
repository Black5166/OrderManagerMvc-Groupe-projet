@model OrderManagerMvc.Models.OrderItem
@{
    ViewData["Title"] = "Delete Order Item";
}
<h3>Delete Order Item</h3>
<h4>Are you sure you want to delete this?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Order (Customer)</dt>
        <dd class="col-sm-10">@(Model.Order?.Customer?.Name ?? "N/A")</dd>
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@(Model.Product?.Name ?? "N/A")</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice.ToString("C")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>