@using OrderManagerMvc.Models
@model IList<OrderItem>

@{
    ViewData["Title"] = "Order Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Order Items</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">➕ Add New Order Item</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Order (Customer)</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.Order?.Customer?.Name ?? "N/A")</td>
                        <td>@(item.Product?.Name ?? "N/A")</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No order items found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
