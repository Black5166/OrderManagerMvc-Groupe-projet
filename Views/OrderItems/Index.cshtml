@using OrderManagerMvc.Models
@model IList<OrderItem>

@{
    ViewData["Title"] = "Order Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background-color:darkgoldenrod; background-image: linear-gradient(to right,goldenrod, #EEDC88, goldenrod);">

    <h2 class="display-4  fw-bolder" style="color: #B0C4DE; text-shadow: 2px 2px 6px #000;">Order Items</h2>
    <style>
        .btn-purple:hover {
            box-shadow: 0 0 10px #B0A3D4;
            transform: scale(1.05);
            background-color: #B0A3D4;
            color: #2F4F4F;
        }

        .btn-coral:hover {
            box-shadow: 0 0 10px #D2042D;
            transform: scale(1.05);
            background-color: #D2042D;
            color: black;
        }

        .btn-yellow:hover {
            box-shadow: 0 0 10px #FFEF00;
            transform: scale(1.05);
            background-color: #FFEF00;
            color: black;
        }
    </style>

    <p>
        <a asp-action="Create" class="btn btn-purple">➕ Add New Order Item</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Order (Customer)</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.Order?.Customer?.Name ?? "N/A")</td>
                        <td>@(item.Product?.Name ?? "N/A")</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-yellow">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-coral">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No order items found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
