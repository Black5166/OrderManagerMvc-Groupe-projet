@model OrderManagerMvc.Models.OrderItem
@{
    ViewData["Title"] = "Create Order Item";
    var orders = ViewBag.Orders as List<OrderManagerMvc.Models.Order> ?? new List<OrderManagerMvc.Models.Order>();
    var products = ViewBag.Products as List<OrderManagerMvc.Models.Product> ?? new List<OrderManagerMvc.Models.Product>();
}
<h3>Create Order Item</h3>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <select asp-for="OrderId" class="form-select" asp-items="@(new SelectList(orders, "Id", "Id"))">
            <option value="">Select an order</option>
            @foreach (var o in orders)
            {
                <option value="@o.Id">#@o.Id - @o.OrderDate.ToString("yyyy-MM-dd")</option>
            }
        </select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <select asp-for="ProductId" class="form-select" asp-items="@(new SelectList(products, "Id", "Name"))">
            <option value="">Select a product</option>
            @foreach (var p in products)
            {
                <option value="@p.Id">@p.Name</option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label">Unit Price (leave 0 to use product price)</label>
        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" value="0" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
}