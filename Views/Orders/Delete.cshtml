@model OrderManagerMvc.Models.Order
@{
    ViewData["Title"] = "Delete Order";
}
<h3>Delete Order</h3>
<h4>Are you sure you want to delete this?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@(Model.Customer?.Name ?? "N/A")</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("d")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Items</dt>
        <dd class="col-sm-10">@Model.OrderItems.Count</dd> <!-- Uses OrderItems -->
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>