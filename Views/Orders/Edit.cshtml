@model OrderManagerMvc.Models.Order
@{
    ViewData["Title"] = "Edit Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background-color:darkgreen; background-image: linear-gradient(to right,darkgreen, #EEDC88, darkgreen);">

    <style >
        .btn-blue:hover {
            box-shadow: 0 0 10px #B0E0E0;
            transform: scale(1.05);
            background-color: #1E90ff;
            color: black;
        }

        .btn-gray:hover {
            box-shadow: 0 0 10px #36454F;
            transform: scale(1.05);
            background-color: #708090;
            color: black;
        }

    </style>



    <h3 class="fs-3  fw-bolder" style="color: #B0C4DE; text-shadow: 2px 2px 6px #000">Edit Order</h3>
    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label"></label>
            <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId"></select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" required />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderDate" class="form-label"></label>
            <input asp-for="OrderDate" class="form-control" type="date" required />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <h4>Order Items</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@(item.Product?.Name ?? "N/A")</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mb-3">
            <button type="submit" class="btn btn-blue">Save</button>
            <a asp-action="Index" class="btn btn-gray">Back</a>
        </div>
    </form>

</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
}