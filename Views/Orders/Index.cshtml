@using OrderManagerMvc.Models 
@model IList<Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background-color:darkgreen; background-image: linear-gradient(to right,darkgreen, #EEDC88, darkgreen);">

    <style>
        .btn-gold:hover {
            box-shadow: 0 0 10px #E6BE8A;
            transform: scale(1.05);
            background-color: #E6BE8A;
            color: #2F4F4F;
        }

        .btn-coral:hover {
            box-shadow: 0 0 10px #D2042D;
            transform: scale(1.05);
            background-color: #D2042D;
            color: black;
        }

        .btn-yellow:hover {
            box-shadow: 0 0 10px #FFEF00;
            transform: scale(1.05);
            background-color: #FFEF00;
            color: black;
        }

        .btn-blue:hover {
            box-shadow: 0 0 10px #B0E0E0;
            transform: scale(1.05);
            background-color: #1E90ff;
            color: black;
        }

    </style>
    
    
    <h2 class= "display-4  fw-bolder" style="color: #B0C4DE; text-shadow: 2px 2px 6px #000;">Orders</h2>

    <p>
        <a asp-action="Create" class="btn btn-gold">➕ Create New Order</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Items</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.Customer?.Name ?? "N/A")</td>
                        <td>@item.OrderDate.ToString("d")</td>
                        <td>@item.Status</td>
                        <td>@(item.OrderItems?.Count ?? 0)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-blue text-black">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-yellow">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-coral">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
